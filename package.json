{
  "name": "@jimbojet/lint",
  "version": "10.10.1-dev.0",
  "description": "Zero-config ESLint flat config factory for (strict, agglutinative) entire-stack formatting and linting: TypeScript, JavaScript, Svelte, HTML, (Tailwind) CSS, Jest, JSON/5/C, and sadly YAML.",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslint-plugin",
    "linter",
    "formatter",
    "typescript",
    "javascript",
    "stylistic",
    "svelte",
    "sveltekit",
    "html",
    "css",
    "tailwindcss",
    "jest",
    "json",
    "jsonc",
    "json5",
    "yaml"
  ],
  "type": "module",
  "private": false,
  "main": "dist/pkg/index.js",
  "types": "dist/pkg/index.d.ts",
  "files": [
    "dist/pkg"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-zhening-luo/lint.git"
  },
  "author": "Jimmy Zhening Luo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jimmy-zhening-luo/lint/issues"
  },
  "homepage": "https://github.com/jimmy-zhening-luo/lint#readme",
  "peerDependencies": {
    "eslint": "8"
  },
  "dependencies": {
    "@html-eslint/eslint-plugin": "~0.25.0",
    "@html-eslint/parser": "~0.25.0",
    "@stylistic/eslint-plugin": "~2.2.2",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "~7.13.1",
    "@typescript-eslint/parser": "~7.13.1",
    "eslint-plugin-jest": "~28.6.0",
    "eslint-plugin-jsonc": "~2.16.0",
    "eslint-plugin-svelte": "~2.40.0",
    "eslint-plugin-yml": "~1.14.0",
    "jest": "^29.7.0",
    "jsonc-eslint-parser": "~2.4.0",
    "svelte": "^4.2.18",
    "svelte-eslint-parser": "~0.39.1",
    "yaml-eslint-parser": "~1.2.3"
  },
  "devDependencies": {
    "eslint": "~8.57.0",
    "typescript": "^5.5.2"
  },
  "scripts": {
    "es": "eslint --fix --cache --cache-strategy content -c eslint.config.js",
    "lint": "npm run lint:cfg && npm run lint:project && npm run lint:src",
    "lint:cfg": "npm run es -- package.json tsconfig.json eslint.config.js",
    "lint:project": "npm run es -- project/**/*.config.js",
    "lint:src": "npm run es -- src/**/*.ts",
    "prebuild": "npm run lint",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "exit 0",
    "prepublishOnly": "npm run test",
    "dev": "npm test"
  }
}
