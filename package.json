{
  "name": "@jimbojet/lint",
  "version": "10.0.0",
  "description": "Jimmy's highly-opinionated config plugin for eslint + typescript-eslint + eslint-stylistic. Use it at your own peril.",
  "type": "module",
  "private": false,
  "main": "dist/package/index.js",
  "types": "dist/package/index.d.ts",
  "files": [
    "dist/package"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-zhening-luo/lint.git"
  },
  "author": "Jimmy Zhening Luo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jimmy-zhening-luo/lint/issues"
  },
  "homepage": "https://github.com/jimmy-zhening-luo/lint#readme",
  "scripts": {
    "es": "eslint --fix --cache --cache-strategy content -c eslint.config.js",
    "lint": "npm run lint:config && npm run lint:src",
    "lint:config": "npm run lint:config:js:project && npm run lint:config:js",
    "lint:src": "npm run lint:src:ts",
    "lint:config:js:project": "npm run es -- project/lint/**/*.config.js",
    "lint:config:js": "npm run es -- *.config.js",
    "lint:src:ts": "npm run es -- src/**/*.ts",
    "prebuild": "npm run lint",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "exit 0",
    "prepublishOnly": "npm run test",
    "dev": "npm test"
  },
  "peerDependencies": {
    "eslint": "8",
    "typescript": "5"
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "~2.1.0",
    "@typescript-eslint/eslint-plugin": "~7.11.0",
    "@typescript-eslint/parser": "~7.11.0"
  },
  "devDependencies": {
    "eslint": "~8.57.0",
    "typescript": "^5.4.5"
  }
}
