{
  "name": "@jimbojet/lint",
  "version": "8.0.12",
  "description": "Jimmy's highly-opinionated config plugin for eslint + typescript-eslint + eslint-stylistic. Use it at your own peril.",
  "type": "module",
  "private": false,
  "main": "./dist/js/main/index.js",
  "types": "./dist/d/main/index.d.ts",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-zhening-luo/lint.git"
  },
  "author": "Jimmy Zhening Luo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jimmy-zhening-luo/lint/issues"
  },
  "homepage": "https://github.com/jimmy-zhening-luo/lint#readme",
  "scripts": {
    "lint": "eslint --cache --cache-strategy content -c eslint.config.js *.config.js src/**/*",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "npm run lint:fix",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "test": "node ./dist/js/test/test.js",
    "dev": "npm run test"
  },
  "peerDependencies": {
    "@stylistic/eslint-plugin": "2",
    "@typescript-eslint/eslint-plugin": "7",
    "@typescript-eslint/parser": "7",
    "eslint": "8",
    "typescript": "5"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "~2.1.0",
    "@types/eslint": "~8.56.10",
    "@typescript-eslint/eslint-plugin": "~7.10.0",
    "@typescript-eslint/parser": "~7.10.0",
    "eslint": "~8.57.0",
    "typescript": "^5.4.5"
  }
}
