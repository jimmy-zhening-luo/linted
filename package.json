{
  "name": "linted",
  "version": "14.1.2-rc.6",
  "description": "Zero-config ESLint flat config factory for (strict, agglutinative) entire-stack formatting and linting: TypeScript, JavaScript, Svelte, HTML, (Tailwind) CSS, Jest, JSON(C), and sadly YAML.",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslint-plugin",
    "linter",
    "formatter",
    "typescript",
    "javascript",
    "stylistic",
    "svelte",
    "sveltekit",
    "html",
    "css",
    "tailwindcss",
    "jest",
    "json",
    "jsonc",
    "yaml"
  ],
  "license": "MIT",
  "type": "module",
  "private": false,
  "config": {
    "PACKAGE_JSON_VERSION": "20.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-zhening-luo/linted.git"
  },
  "homepage": "https://github.com/jimmy-zhening-luo/linted#readme",
  "bugs": {
    "url": "https://github.com/jimmy-zhening-luo/linted/issues"
  },
  "author": {
    "name": "Jimmy Zhening Luo",
    "email": "1450044+jimmy-zhening-luo@users.noreply.github.com",
    "url": "https://jimm.my"
  },
  "files": [
    "dist/bundle"
  ],
  "main": "dist/bundle/index.js",
  "types": "dist/bundle/index.d.ts",
  "peerDependencies": {
    "eslint": "^8.57",
    "typescript": ">=5.5"
  },
  "peerDependenciesMeta": {
    "jest": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@html-eslint/eslint-plugin": "~0.25.0",
    "@html-eslint/parser": "~0.25.0",
    "@stylistic/eslint-plugin": "~2.3.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "~7.15.0",
    "@typescript-eslint/parser": "~7.15.0",
    "cross-env": "^7.0.3",
    "eslint-plugin-jest": "~28.6.0",
    "eslint-plugin-jsonc": "~2.16.0",
    "eslint-plugin-svelte": "~2.41.0",
    "eslint-plugin-yml": "~1.14.0",
    "jest": "^29.7.0",
    "jsonc-eslint-parser": "~2.4.0",
    "svelte": "^4.2.18",
    "svelte-eslint-parser": "~0.39.2",
    "yaml-eslint-parser": "~1.2.3"
  },
  "devDependencies": {
    "eslint": "~8.57.0",
    "linted": "~14.1.1",
    "typescript": "^5.5.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/"
    ]
  },
  "scripts": {
    "eslint": "eslint --cache --fix",
    "lint:source": "npm run eslint -- src/**/*.{js,ts,html}",
    "lint:configs": "npm run eslint -- {*,.github/workflows/*}.{json,jsonc,js,ts,yml}",
    "lint": "(npm run --if-present lint:svelte) && (npm run lint:source) && (npm run lint:configs)",
    "prebuild": "npm run lint",
    "build": "(vite build) || (tsc)",
    "pretest": "npm run build",
    "test": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" NODE_NO_WARNINGS=1 jest --passWithNoTests --",
    "prepublishOnly": "npm test",
    "prestart": "npm test",
    "start": "(vite preview) || (node .)",
    "preaction": "npm test",
    "action": "exit 0"
  }
}
